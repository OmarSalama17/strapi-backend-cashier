{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "barcode": {
      "type": "string"
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "S",
        "M",
        "L",
        "XL"
      ]
    },
    "color": {
      "type": "string"
    },
    "inStock": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "رجالي",
        "حريمي ",
        "أطفال"
      ]
    },
    "costPrice": {
      "type": "decimal"
    },
    "soldCount": {
      "type": "integer"
    },
    "returnedCount": {
      "type": "integer",
      "default": 0
    }
  }
}
